{
  "name": "fortune-tiles-desktop",
  "version": "1.0.1",
  "description": "Fortune Tiles Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --publish=never",
    "build-and-publish": "electron-builder --win --publish=always",
    "dist": "npm run build"
  },
  "author": "Fortune Tiles",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.fortunetiles.inventory",
    "productName": "Fortune Tiles",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false
    },
    "forceCodeSigning": false,
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
